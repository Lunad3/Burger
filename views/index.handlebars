<h1>Burgers</h1>

<h2>EAT a Burger!</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li><button class="devourBtn" data-id="{{id}}">{{burger_name}}</button></li>
    {{/unless}}
  {{/each}}
</ul>


<h2>Eaten Burgers</h2>
<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="newBurger" name="name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="true" checked> Devoured!<br>
    <input type="radio" name="devoured" value="false"> not Devoured
  </div>

  <button type="submit">Add Burger</button>
</form>